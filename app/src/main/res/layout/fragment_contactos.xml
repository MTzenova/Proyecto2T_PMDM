<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContactos"
        tools:context=".fragments.ContactosFragment"
        android:background="#B2E0F9">

    <TextView
            android:text="@string/titulo_ca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.019"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="103dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/microsoft"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/imagen_rv"/>
    <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@android:drawable/stat_sys_phone_call"
            android:id="@+id/image_telefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.077"
            app:tint="@color/black" android:importantForAccessibility="no"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/icons_location"
            android:id="@+id/image_ubi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintTop_toBottomOf="@+id/image_wtpp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.078"
            android:contentDescription="@string/location_ca"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_email"
            android:id="@+id/image_mail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintTop_toBottomOf="@+id/image_telefono"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.043"
            app:tint="@color/black"
            android:contentDescription="@string/mail_ca"/>
    <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/icons_whatsapp"
            android:id="@+id/image_wtpp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintTop_toBottomOf="@+id/image_mail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.062"
            android:contentDescription="@string/wtpp_ca"/>
    <androidx.cardview.widget.CardView
            android:layout_width="232dp"
            android:layout_height="36dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/cardView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintVertical_bias="0.062"
            app:layout_constraintStart_toEndOf="@+id/image_telefono">

        <TextView
                android:id="@+id/telefono_ca"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/telefono_ca"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/image_mail"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.033">

        <TextView
                android:id="@+id/mail_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/mail_ca"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <ImageView
            android:layout_width="290dp"
            android:layout_height="264dp"
            app:srcCompat="@drawable/maps"
            android:id="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="28dp"
            android:contentDescription="@string/imagen_rv"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView4"
            app:layout_constraintVertical_bias="0.407"
            app:layout_constraintHorizontal_bias="0.512"/>
    <androidx.cardview.widget.CardView
            android:layout_width="232dp"
            android:layout_height="64dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/cardView4"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView3"
            app:layout_constraintStart_toEndOf="@+id/image_ubi"
            android:layout_marginStart="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.02">

        <TextView
                android:id="@+id/location_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/location_ca"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/cardView3"
            app:layout_constraintStart_toEndOf="@+id/image_wtpp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintVertical_bias="0.05">

        <TextView
                android:id="@+id/wtpp_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/wtpp_ca"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>